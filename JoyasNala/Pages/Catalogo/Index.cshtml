@page
@model JoyasNala.Pages.Catalogo.IndexModel
@{
    ViewData["Title"] = "Catálogo de Productos";
}

<h1>@ViewData["Title"]</h1>
<div class="catalogo">
    @foreach (var producto in Model.Productos)
    {
        <div class="catalog-item">
            <h3>@producto.Nombre</h3>
            <img src="@producto.ImagenUrl" alt="@producto.Nombre" />
            <p>Precio: $@producto.Precio</p>
            <a asp-page="/Productos/Details" asp-route-id="@producto.Id" class="btn btn-info">Ver Detalles</a>
        </div>
    }
</div>

<style>
    .catalogo {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }
    .producto {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
    }
    .producto img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }
</style>
